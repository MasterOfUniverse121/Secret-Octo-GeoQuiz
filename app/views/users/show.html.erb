<h1><%= @user.name %></h1>

<div class="hello">
  <strong>Username</strong>:<br />
  <p><%= @user.name %></p>
</div>
<div class="hello">
  <strong>Email</strong>:<br />
  <p><%= @user.email %></p>
</div>
<div class="hello">
  <strong>Bio</strong>:<br />
  <p><%= @user.bio %></p>
</div>
<div class="hello">
  <strong>Pic</strong>:<br />
  <p><img src="<%= @user.pic %>" alt="Pic" height="200px"></p>
</div>
<div class="hello">
	<strong>Quizzes</strong>:<br />
<% @quizzes.each do |quiz|%>
<% if quiz.completed = 'true' %>
	<p><%= quiz.chapter_name %></p>
<% end %>
<% end %>
</div>
<% if session['username'] == @user.name %>
<div class="hello">
<button class="hooray"><a href="/users/<%= @user.id %>/edit">Edit</a></button>
<button class="hooray"><a href="/users/<%= @user.id %>/destroy">Destroy</a></button>
</div>
<% end %>
