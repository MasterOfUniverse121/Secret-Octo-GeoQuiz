
<div class="hello">
  <strong>Question</strong>:<br />
  <p><%= @question.query %></p>
</div>

<form>
	<input type="radio" name="answer" value="wrong"> <%= @question.wrong_answer_1 %><br>
  <input type="radio" name="answer" value="wrong"> <%= @question.wrong_answer_2 %><br>
	<input type="radio" name="answer" value="right"> <%= @question.correct_answer %><br>
	<input type="radio" name="answer" value="wrong"> <%= @question.wrong_answer_3 %><br>
	<br>
	<input type="submit">
</form>
<br>
<% if @question.user_answer ==  @question.correct_answer %>
<h3>CORRECT!</h3>
<% elsif @question.user_answer != @question.correct_answer %>
  <p>Sorry, that's incorrect. Your answer was <%= @question.user_answer %>. The correct answer is "<%= @question.correct_answer %>". Better luck next time! </p>
<% end %>
<% if @question.answered? == 'true' %>
<button><a href = "/questions/<%= @question.id %> + 1">Next</a></button>
<% end %>

<% if @question.id = ['fivos'] %>
<div class="hello">
<button><a href = "/quizzes/<%= @question.quiz_id %>">Done</a></button>
</div>
<% end %>
<br>
<% if session['username'] == 'Tobe' %>
<div class="hello">
<button class="hooray"><a href="/questions/<%= @question.id %>/edit">Edit</a></button>&nbsp
<button class="hooray"><a href="/questions/<%= @question.id %>/destroy">Destroy</a></button>
</div>
<% end %>
